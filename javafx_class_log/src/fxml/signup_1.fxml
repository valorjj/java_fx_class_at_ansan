<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="signuppane" prefHeight="200.0"
	prefWidth="200.0" xmlns="http://javafx.com/javafx/17"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controller.SignupController">
	<children>
		<ImageView fitHeight="720.0" fitWidth="1000.0"
			layoutY="-58.0" opacity="0.1" pickOnBounds="true"
			preserveRatio="true">
			<image>
				<Image url="@20201105000076_0.jpg" />
			</image>
		</ImageView>
		<AnchorPane layoutX="212.0" layoutY="87.0"
			prefHeight="502.0" prefWidth="577.0"
			style="-fx-background-color: #ffffff;">
			<children>
				<TextField fx:id="txtid" layoutX="40.0" layoutY="60.0"
					prefHeight="50.0" prefWidth="220.0" promptText="USER ID">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<effect>
						<InnerShadow />
					</effect>
				</TextField>
				<PasswordField fx:id="txtpassword" layoutX="40.0"
					layoutY="118.0" prefHeight="50.0" prefWidth="220.0"
					promptText="USER PASSWORD">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<effect>
						<InnerShadow />
					</effect>
				</PasswordField>
				<ImageView fitHeight="35.0" fitWidth="35.0"
					layoutX="133.0" layoutY="15.0" opacity="0.4" pickOnBounds="true"
					preserveRatio="true">
					<image>
						<Image url="@login_icon_1.png" />
					</image>
				</ImageView>
				<PasswordField fx:id="txtpasswordconfirm"
					layoutX="40.0" layoutY="178.0" prefHeight="50.0" prefWidth="220.0"
					promptText="USER PASSWORD CONFIRM">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<effect>
						<InnerShadow />
					</effect>
				</PasswordField>
				<Button fx:id="btn_signup" layoutX="82.0" layoutY="448.0"
					mnemonicParsing="false" onMouseClicked="#signup" prefHeight="40.0"
					prefWidth="60.0" text="signUp">
					<effect>
						<InnerShadow />
					</effect>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<Button fx:id="btn_back" layoutX="161.0" layoutY="448.0"
					mnemonicParsing="false" onMouseClicked="#back" prefHeight="40.0"
					prefWidth="60.0" text="cancel">
					<effect>
						<InnerShadow />
					</effect>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
				</Button>
				<ImageView fitHeight="200.0" fitWidth="200.0"
					layoutX="317.0" layoutY="128.0">
					<image>
						<Image url="@sample2.jpg" />
					</image>
				</ImageView>
				<Label fx:id="lblconfirm" alignment="CENTER" layoutX="39.0"
					layoutY="422.0" prefHeight="15.0" prefWidth="221.0" text="[error]"
					textFill="RED">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
				</Label>
				<TextField fx:id="txtemail" layoutX="40.0" layoutY="238.0"
					prefHeight="50.0" prefWidth="220.0" promptText="USER EMAIL">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<effect>
						<InnerShadow />
					</effect>
				</TextField>
				<TextField fx:id="txtname" layoutX="40.0" layoutY="352.0"
					prefHeight="50.0" prefWidth="220.0" promptText="USER NAME">
					<font>
						<Font name="Arial" size="12.0" />
					</font>
					<cursor>
						<Cursor fx:constant="HAND" />
					</cursor>
					<effect>
						<InnerShadow />
					</effect>
				</TextField>
			</children>
		</AnchorPane>
	</children>
</AnchorPane>
